<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thetestcompany.presentation">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listmanagement.ListManagementActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".listitemmanagement.ListItemManagementActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".selectlistforshopping.SelectListForShoppingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopping.ShoppingActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".checkout.CheckoutActivity" />
        <activity android:name=".receipt.ReceiptActivity"></activity>
    </application>

</manifest>