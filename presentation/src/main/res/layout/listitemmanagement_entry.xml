<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/list_item_fg"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/colorListBg">

        <CheckBox
            android:id="@+id/list_item_check"
            android:layout_width="@dimen/checkbox_max_width"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:alpha="1"
            android:button="@drawable/item_circle_checkbox"
            android:checked="true" />

        <TextView
            android:id="@+id/list_item_entry_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"

            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/list_item_check"
            android:text="Name"
            android:textColor="@color/colorListTextPrimary"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/list_item_entry_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/list_item_entry_name"
            android:layout_below="@+id/list_item_entry_name"
            android:text="Amount"
            android:textColor="@color/colorListTextSecondary"
            android:textSize="13dp" />
    </RelativeLayout>

</FrameLayout>